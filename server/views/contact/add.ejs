<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content  for the add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title %></h1>

      <form class="form" method="post">
        <div class="from-group">
          <label for="nameTextField">Contact Name</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter the full name:"
            name="name"
            required
          />
        </div>

        <div class="from-group">
          <label for="authorTextField">Contact Phone #</label>
          <input
            type="text"
            class="form-control"
            id="numberTextField"
            placeholder="Enter the phone #:"
            name="number"
            required
          />
        </div>

        <div class="from-group">
          <label for="publishedTextField">Email Address</label>
          <input
            type="text"
            class="form-control"
            id="emailTextField"
            placeholder="Enter the email Address:"
            name="email"
            required
          />
        </div>

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/contact-list" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
</div>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
